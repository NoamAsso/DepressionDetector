<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur_back_back_back"
    tools:context=".UserPageActivity">


    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.03"></RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.94">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#7CFFFFFF"
                        android:orientation="vertical">


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />
                        <TextView
                            android:id="@+id/user_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:paddingRight="20dp"

                            android:text="User Id: -1"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">
                            <ImageView

                                android:id="@+id/user_pic"
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:background="@drawable/ic_circle_icon_man"
                                android:paddingBottom="10dp"
                                android:paddingTop="1dp" />


                        </LinearLayout>



                        <TextView
                            android:id="@+id/name_and_last_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Name"
                            android:textColor="@android:color/black"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                        android:id="@+id/event_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:text="Phone number:"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />


                        <TextView
                            android:id="@+id/phone_num_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:text="0524217111"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />


                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/event_date1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                android:text="Age:"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />


                            <TextView
                                android:id="@+id/age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"
                                android:text="34"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <Button
                            android:id="@+id/change"
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:layout_gravity="center"
                            android:background="@drawable/curve_edges_button_login"
                            android:text="Edit"
                            android:textAllCaps="false"
                            android:textSize="13dp"
                            android:textColor="@android:color/white" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/event_date2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"

                                android:text="Join date: "
                                android:textColor="#858585"
                                android:textSize="11sp" />


                            <TextView
                                android:id="@+id/join_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"
                                android:text="34"
                                android:textColor="#858585"
                                android:textSize="11sp" />


                        </LinearLayout>
                        <View
                            android:layout_width="240dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="#303030"
                            android:paddingTop="2dp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />
                        <LinearLayout
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:background="@drawable/event_page_background2">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingBottom="10dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:text="Status:"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />
                            <ImageView

                                android:id="@+id/status_icon"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_confused"
                                android:paddingBottom="10dp"
                                android:paddingTop="1dp" />
                            <TextView
                                android:id="@+id/status_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingBottom="10dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:text="depressed"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />
                        </LinearLayout>



                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />



                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <View
                            android:layout_width="320dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="#303030"
                            android:paddingTop="2dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />





                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="recordings" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />
                        <!-- TODO: Update blank fragment layout -->
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/my_recycler_view_user_page"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="2dp"
                            android:layout_weight="1"
                            android:scrollbars="vertical" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/event_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Prediction history graph"
                            android:textColor="@android:color/black"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp">

                        <com.github.mikephil.charting.charts.LineChart
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/line_chart">

                        </com.github.mikephil.charting.charts.LineChart>
                    </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <View
                            android:layout_width="240dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="#303030"
                            android:paddingTop="2dp" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:paddingTop="30dp"
                            android:src="@drawable/ic_depression"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="1dp"
                            android:text="DepDetector™ 2019"
                            android:layout_gravity="center"
                            android:singleLine="false"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="1dp"
                            android:text="©All rights reserved"
                            android:layout_gravity="center"
                            android:textSize="8dp"
                            android:singleLine="false"
                            android:gravity="center"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.03"></RelativeLayout>


            </LinearLayout>

        </LinearLayout>
        <!-- Here you put the rest of your current view-->
    </android.support.v4.widget.NestedScrollView>






</android.support.constraint.ConstraintLayout>