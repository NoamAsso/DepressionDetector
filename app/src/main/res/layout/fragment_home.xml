<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/capture"
    tools:context=".HomeFragment">



    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/search_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Search"
                android:textColor="#78000000"
                android:textSize="30sp"
 />
            <View
                android:layout_width="240dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#303030"
                android:paddingTop="2dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.SearchView
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/event_page_background3"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/recoding_list_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/recording_list_title_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Recordings"
                    android:textColor="#78000000"
                    android:textSize="30sp" />
                <View
                    android:layout_width="240dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#303030"
                    android:paddingTop="2dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <!-- TODO: Update blank fragment layout -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_recycler_view_rec_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="2dp"
                    android:layout_weight="1"
                    android:scrollbars="vertical" />



            </LinearLayout>
            <LinearLayout
                android:id="@+id/patients_list_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/patients_list_title_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Patients"
                    android:textColor="#78000000"
                    android:textSize="30sp" />
                <View
                    android:layout_width="240dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#303030"
                    android:paddingTop="2dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <!-- TODO: Update blank fragment layout -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_recycler_view_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="2dp"
                    android:layout_weight="1"
                    android:scrollbars="vertical" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />



            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>