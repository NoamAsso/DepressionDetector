<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur_back_back_back"
    tools:context=".AboutActivity">
    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.03"></RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.94">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/event_page_background2"
                        android:orientation="vertical">


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">


                        </LinearLayout>
                        <TextView
                            android:id="@+id/name_and_last_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="About"
                            android:textColor="@android:color/black"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:paddingTop="30dp"
                            android:src="@drawable/ic_depression"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="1dp"
                            android:text="DepDetector™ 2019"
                            android:layout_gravity="center"
                            android:singleLine="false"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="1dp"
                            android:text="©All rights reserved"
                            android:layout_gravity="center"
                            android:textSize="8dp"
                            android:singleLine="false"
                            android:gravity="center"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />




                        <TextView
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"

                            android:text="Overview"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"/>
                        <TextView
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="DepDetector is an app created for professional Psychiatrists, to give them a simple, free and user-friendly application for a quick first diagnosis of clinical depression via voice record.\n•••\n
The app provides management tools with a user-friendly and intuitive UI, to easily follow your depressed patient’s progress and statistics. Please visit the FAQ page for more details about the app's features.\n•••\n"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"/>
                        <TextView
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="How we do this?"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"/>



                        <TextView
                            android:id="@+id/words"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="
Using a Machine-Learning algorithm, the app analyzes the audio of a patient's voice and gives a prediction of his/her depression level - all this in a matter of seconds.
The app uses 'OpenSMILE' - an open-source software for automatic extraction of features from audio signals and for classification of speech.\n the app does not recognize nor analize the words that are being said while recording. predictions are based solely on voice's tones, characteristics and friquencies. \n
"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"/>
                        <View
                            android:layout_width="240dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:background="#B4000000"
                            android:layout_marginBottom="9dp"
                            android:paddingTop="2dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/bguuuuuuuuuuuuuuuuuuuuuuuuu"/>
                        <TextView
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="DepDetector was created by Noam Assouline and Yuval Peled with guidance of Dr. Dan Vilenchik as a final project for Ben Gurion University, Communication Systems Engineering department.\n
"

                            android:textColor="@android:color/black"
                            android:textSize="12sp"/>


                        <TextView
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Contact the developers"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="\n
Noam assouline – assoulinenoam.gmail.com\n
Yuval Peled – yuval05261@gmail.com\n
"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="App version 0.41"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"/>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />




                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.03"></RelativeLayout>


            </LinearLayout>

        </LinearLayout>
        <!-- Here you put the rest of your current view-->
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>